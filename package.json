{
  "name": "production-system-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/production",
    "apps/packing",
    "apps/inventory",
    "apps/raw-material",
    "apps/stock-outwards"
  ],
  "scripts": {
    "dev:production": "npm run dev --workspace=apps/production",
    "dev:packing": "npm run dev --workspace=apps/packing",
    "dev:inventory": "npm run dev --workspace=apps/inventory",
    "dev:raw-material": "npm run dev --workspace=apps/raw-material",
    "dev:stock-outwards": "npm run dev --workspace=apps/stock-outwards",
    "build:production": "npm run build --workspace=apps/production",
    "build:packing": "npm run build --workspace=apps/packing",
    "build:inventory": "npm run build --workspace=apps/inventory",
    "build:raw-material": "npm run build --workspace=apps/raw-material",
    "build:stock-outwards": "npm run build --workspace=apps/stock-outwards",
    "build:all": "npm run build:production && npm run build:packing && npm run build:inventory && npm run build:raw-material && npm run build:stock-outwards"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.12"
  }
}
